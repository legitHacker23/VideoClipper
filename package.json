{
  "name": "ViralClipper",
  "version": "1.0.4",
  "description": "Desktop video clipper app",
  "main": "electron/main.js",
  "workspaces": [
    "client"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/server.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:react\" \"npm:dev:express\" \"npm:dev:electron\"",
    "dev:react": "npm --workspace client run dev",
    "dev:express": "node server/server.js",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "npm --workspace client run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "googleapis": "^154.1.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^29.0.0",
    "electron-builder": "^24.8.0",
    "typescript": "^5.4.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.ytclips.desktop",
    "files": [
      "client/dist/**/*",
      "server/**/*",
      "electron/**/*",
      "bin/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin"
      }
    ],
    "asarUnpack": [
      "bin/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "publisherName": "YTClips"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "publish": [
    {
      "provider": "github",
      "owner": "legitHacker23",
      "repo": "VideoClipper"
    }
  ]
}
